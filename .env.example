# WIP Environment Variables (example)

# --- Server Ports ---
WEATHER_SERVER_PORT=4110
LOCATION_RESOLVER_PORT=4109
QUERY_GENERATOR_PORT=4111
REPORT_SERVER_PORT=4112

# --- Server Hosts ---
# Python/Rustクライアントが参照（未設定時: 127.0.0.1 / 4110）
WEATHER_SERVER_HOST=127.0.0.1

# サーバ間接続先（WeatherServerの設定は config.ini 優先だが参考値として）
LOCATION_RESOLVER_HOST=localhost
QUERY_GENERATOR_HOST=localhost
REPORT_SERVER_HOST=localhost

# --- HTTP Apps (Map / External Weather API) ---
MAP_HTTP_PORT=80
WEATHER_API_PORT=80
# Map 側にマウントされた Weather API のベースURL
WEATHER_API_BASE_URL=http://localhost:80/api

# --- System Settings ---
WIP_DEBUG=true
PROTOCOL_VERSION=1
UDP_BUFFER_SIZE=1300

# --- Database Settings (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_forecast_map
DB_USERNAME=wip
DB_PASSWORD=wippass
# 任意（使わない場合は未設定で可）
# DATABASE_URL=postgresql://user:password@localhost/weather_forecast_map

# --- Redis Settings ---
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Log Redis / KeyDB (for Map UI logs) ---
LOG_REDIS_HOST=localhost
LOG_REDIS_PORT=6380
LOG_REDIS_DB=0

# --- Cache / Storage ---
MAX_CACHE_SIZE=1000
WEATHER_OUTPUT_FILE=false

# --- Authentication Settings ---
# Weather Server（クライアント→WeatherServer の認証）
WEATHER_SERVER_REQUEST_AUTH_ENABLED=false
WEATHER_SERVER_RESPONSE_AUTH_ENABLED=false
WEATHER_SERVER_PASSPHRASE=wip

# 他サーバ（必要に応じて）
LOCATION_SERVER_AUTH_ENABLED=false
LOCATION_SERVER_PASSPHRASE=wip
QUERY_SERVER_AUTH_ENABLED=false
QUERY_SERVER_PASSPHRASE=wip
REPORT_SERVER_AUTH_ENABLED=false
REPORT_SERVER_PASSPHRASE=wip

# ReportServer のDB保存（Redis中継など）
REPORT_SERVER_ENABLE_DATABASE=true

# サーバ毎のリクエスト認証フラグ（任意）
LOCATION_RESOLVER_REQUEST_AUTH_ENABLED=false
QUERY_GENERATOR_REQUEST_AUTH_ENABLED=false
REPORT_SERVER_REQUEST_AUTH_ENABLED=false

