# WIP 環境変数

##### サーバーのバインド設定 #####
WEATHER_SERVER_BIND_HOST=0.0.0.0
LOCATION_SERVER_BIND_HOST=0.0.0.0
QUERY_SERVER_BIND_HOST=0.0.0.0
REPORT_SERVER_BIND_HOST=0.0.0.0
UVICORN_WORKERS=4
UVICORN_RELOAD=false

##### サーバーポート #####
WEATHER_SERVER_PORT=4110
LOCATION_RESOLVER_PORT=4109
QUERY_GENERATOR_PORT=4111
REPORT_SERVER_PORT=4112

##### サーバーホスト #####
LOCATION_RESOLVER_HOST=localhost
QUERY_GENERATOR_HOST=localhost
REPORT_SERVER_HOST=localhost

##### システム設定 #####
WIP_DEBUG=true
PROTOCOL_VERSION=1
UDP_BUFFER_SIZE=1300
LOG_LIMIT=100
BROADCAST_INTERVAL=1

##### データベース設定 #####
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_forecast_map
DB_USERNAME=postgres
DB_PASSWORD=password

##### Redis 設定 #####
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
LOG_REDIS_HOST=localhost
LOG_REDIS_PORT=6380
LOG_REDIS_DB=0

##### キャッシュ・ストレージ設定 #####
MAX_CACHE_SIZE=1000
WEATHER_OUTPUT_FILE=false
EXPIRATION_TIME_WEATHER=1800
EXPIRATION_TIME_AREA=604800
ENABLE_WEATHER_CACHE=true
ENABLE_AREA_CACHE=false
ENABLE_REDIS_CACHE=true
ENABLE_CACHE=false
ENABLE_COORDINATE_CACHE=false

##### レポートサーバ設定 #####
REPORT_ENABLE_LOGGING=true
REPORT_LOG_DIRECTORY=python/logs/reports
REPORT_ENABLE_DATABASE=false
REPORT_ENABLE_FILE_LOGGING=true
REPORT_LOG_FILE_PATH=python/logs/reports/report_server.log
ENABLE_DATA_VALIDATION=true
MAX_REPORT_SIZE=1024
ENABLE_ALERT_PROCESSING=true
ENABLE_DISASTER_PROCESSING=true

##### 認証設定 #####
