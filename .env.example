# WIP Authentication System Environment Variables

# Server Port Settings
WEATHER_SERVER_PORT=4110
LOCATION_RESOLVER_PORT=4109
QUERY_GENERATOR_PORT=4111
REPORT_SERVER_PORT=4112

# Server Host Settings
LOCATION_RESOLVER_HOST=localhost
QUERY_GENERATOR_HOST=localhost
REPORT_SERVER_HOST=localhost

# System Settings
WIP_DEBUG=true
PROTOCOL_VERSION=1
UDP_BUFFER_SIZE=1300

# Database Settings (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=weather_forecast_map
DB_USERNAME=postgres
DB_PASSWORD=password

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REPORT_REDIS_HOST=localhost
